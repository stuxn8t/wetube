mixin videoPlayer(video ={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    i.fas.fa-volume-up
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span#jsPlayButton
                    i.far.fa-play-circle
            .videoPlayer__column
                span
                    i.fas.fa-expand-arrows-alt